{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@assets": ["assets"],
      "@assets/*": ["assets/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@layouts": ["layouts"],
      "@layouts/*": ["layouts/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@common": ["services/common"],
      "@common/*": ["services/common/*"],
      "@shopApi": ["services/shop/api/shopify"],
      "@shopApi/*": ["services/shop/api/shopify/*"],
      "@shop": ["services/shop"],
      "@shop/*": ["services/shop/*"],
      "@styles": ["styles"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
